{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@modules/*": [
        "src/app/modules/*"
      ],
      "@core/*": [
        "src/app/core/*"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ],
      "@models/*": [
        "app/models/*"
      ],
    },
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "types": [
      "node",
      "express",
      "mongoose",
      "node-telegram-bot-api"
    ],
  },
  "quotemark": [
    true,
    "single",
    "jsx-double"
  ],
  "lib": [
    "es2015"
  ]
}